<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".project.account.fragments.UserCreationFragment_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/first_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name  *"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/first_name_outer"
            android:layout_marginStart="7dp"
            android:textStyle="bold"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/first_name_outer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_name_txt"
            android:layout_marginHorizontal="28dp"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeColor="#ffa500"
            app:errorEnabled="true"
            app:errorTextColor="@color/red"
            app:boxStrokeErrorColor="@color/red"
            app:errorIconDrawable="@drawable/ic_round_error_info_24"
            app:errorIconTint="@color/red"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/input_layout_edit_text_cursor"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/last_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name  *"
            app:layout_constraintTop_toBottomOf="@id/first_name_outer"
            app:layout_constraintStart_toStartOf="@id/last_name_outer"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/last_name_outer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/last_name_txt"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeColor="#ffa500"
            app:errorEnabled="true"
            app:errorTextColor="@color/red"
            app:boxStrokeErrorColor="@color/red"
            app:errorIconDrawable="@drawable/ic_round_error_info_24"
            app:errorIconTint="@color/red"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/input_layout_edit_text_cursor"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone  *"
            app:layout_constraintTop_toBottomOf="@id/last_name_outer"
            app:layout_constraintStart_toStartOf="@id/phone_no_outer"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_no_outer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_txt"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeColor="#ffa500"
            app:errorEnabled="true"
            app:errorTextColor="@color/red"
            app:boxStrokeErrorColor="@color/red"
            app:errorIconDrawable="@drawable/ic_round_error_info_24"
            app:errorIconTint="@color/red"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_no"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/input_layout_edit_text_cursor"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/upi_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI ID"
            app:layout_constraintTop_toBottomOf="@id/phone_no_outer"
            app:layout_constraintStart_toStartOf="@id/upi_id_outer"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/upi_id_outer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upi_id_txt"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeColor="#ffa500"
            app:errorEnabled="true"
            app:errorTextColor="@color/red"
            app:boxStrokeErrorColor="@color/red"
            app:errorIconDrawable="@drawable/ic_round_error_info_24"
            app:errorIconTint="@color/red"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/upi_id"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/input_layout_edit_text_cursor"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>