<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.activity.ThemesActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_theme_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="26dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                >

                <ImageView
                    android:id="@+id/back_pressed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_baseline_arrow_left_alt_24"
                    app:tint="?attr/colorOnError" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/back_pressed"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/themes_amp_accent_color"
                    android:textColor="?attr/colorOnError"
                    android:textSize="20sp" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/themes_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/top_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="?attr/customColorValue"
                android:background="?attr/customColorValue"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:cardElevation="0dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="16dp">
                    <TextView
                        android:id="@+id/themes_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themes"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="12sp"
                        android:alpha="0.7"
                        android:textAllCaps="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <RadioGroup
                        android:id="@+id/radio_group_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/themes_txt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <RadioButton
                            android:id="@+id/normal_radio_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/normal"
                            android:layoutDirection="rtl"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_normal_theme_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@id/normal_theme_tab_layout"
                                app:layout_constraintTop_toTopOf="@id/normal_theme_tab_layout"
                                app:layout_constraintBottom_toTopOf="@id/normal_theme_tab_layout"
                                android:backgroundTint="@color/red"
                                android:background="@color/red"
                                app:cardCornerRadius="50dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/beta"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_marginHorizontal="6dp"
                                    android:paddingVertical="1dp"
                                    android:fontFamily="@font/baloo_bhai"
                                    />
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/normal_theme_tab_layout"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:tabGravity="fill"
                                app:tabIndicatorAnimationMode="elastic"
                                app:tabIndicatorFullWidth="true"
                                app:tabIndicatorGravity="stretch"
                                android:background="@drawable/theme_tab_view_background_design"
                                app:tabIndicator="@drawable/theme_tab_view_background_design"
                                app:tabMode="auto"
                                app:tabTextAppearance="@style/TabLayoutTextAppearanceTab"
                                app:tabSelectedTextColor="?attr/colorOnPrimary"
                                app:tabTextColor="?attr/colorError"
                                android:backgroundTint="?attr/colorOnPrimary"
                                app:tabIndicatorColor="?attr/colorError"
                                android:padding="5dp"
                                >
                                <com.google.android.material.tabs.TabItem
                                    android:id="@+id/normal_theme_tab_layout_item_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/light"
                                    />
                                <com.google.android.material.tabs.TabItem
                                    android:id="@+id/normal_theme_tab_layout_item_dark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dark"
                                    />
                                <com.google.android.material.tabs.TabItem
                                    android:id="@+id/normal_theme_tab_layout_item_system"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/system"
                                    />
                                <com.google.android.material.tabs.TabItem
                                    android:id="@+id/normal_theme_tab_layout_item_auto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/auto"
                                    />
                            </com.google.android.material.tabs.TabLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <RadioButton
                            android:id="@+id/solid_radio_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/solid"
                            android:layoutDirection="rtl"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_solid_theme_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/solid_card_another_color"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:elevation="0dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="10dp"
                                android:alpha="0.1"
                                app:cardBackgroundColor="?attr/colorOnPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <ImageView
                                android:id="@+id/solid_another_color"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_round_addition_24"
                                android:elevation="10dp"
                                app:tint="?attr/colorOnPrimary"
                                android:contentDescription="@string/add_another"
                                app:layout_constraintStart_toStartOf="@id/solid_card_another_color"
                                app:layout_constraintTop_toTopOf="@id/solid_card_another_color"
                                app:layout_constraintBottom_toBottomOf="@id/solid_card_another_color"
                                app:layout_constraintEnd_toEndOf="@id/solid_card_another_color"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/theme_solid_colors_recycler_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/solid_another_color"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="20dp"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <RadioButton
                            android:id="@+id/image_radio_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/image"
                            android:layoutDirection="rtl"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_image_theme_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/image_card_another_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:elevation="0dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="10dp"
                                android:alpha="0.1"
                                app:cardBackgroundColor="?attr/colorOnPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <ImageView
                                android:id="@+id/image_another_image"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:tint="?attr/colorOnPrimary"
                                android:src="@drawable/ic_round_add_photo_picture_24"
                                android:contentDescription="@string/add_another"
                                app:layout_constraintStart_toStartOf="@id/image_card_another_image"
                                app:layout_constraintTop_toTopOf="@id/image_card_another_image"
                                app:layout_constraintBottom_toBottomOf="@id/image_card_another_image"
                                app:layout_constraintEnd_toEndOf="@id/image_card_another_image"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/theme_images_recycler_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/image_card_another_image"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <RadioButton
                            android:id="@+id/gradient_radio_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/gradient"
                            android:layoutDirection="rtl"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_gradient_theme_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/gradient_card_another_gradient"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:elevation="0dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="10dp"
                                android:alpha="0.1"
                                app:cardBackgroundColor="?attr/colorOnPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                            <ImageView
                                android:id="@+id/gradient_another_gradient"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:tint="?attr/colorOnPrimary"
                                android:src="@drawable/ic_round_addition_24"
                                android:contentDescription="@string/add_another"
                                app:layout_constraintStart_toStartOf="@id/gradient_card_another_gradient"
                                app:layout_constraintTop_toTopOf="@id/gradient_card_another_gradient"
                                app:layout_constraintBottom_toBottomOf="@id/gradient_card_another_gradient"
                                app:layout_constraintEnd_toEndOf="@id/gradient_card_another_gradient"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/theme_gradient_recycler_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/gradient_card_another_gradient"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/accent_color_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/themes_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="?attr/customColorValue"
                android:background="?attr/customColorValue"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="16dp"
                app:cardElevation="0dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    >
                    <TextView
                        android:id="@+id/accent_color_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accent_color"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="12sp"
                        android:alpha="0.7"
                        android:textAllCaps="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <RelativeLayout
                        android:id="@+id/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/accent_color_txt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/red_card"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/red"
                            android:backgroundTint="@color/red"
                            app:cardCornerRadius="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/red_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/red_card"
                            android:text="@string/red"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            tools:ignore="RelativeOverlap" />
                        <RadioButton
                            android:id="@+id/red_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/red"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/green_card"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/green"
                            android:backgroundTint="@color/green"
                            app:cardCornerRadius="10dp" />

                        <TextView
                            android:id="@+id/green_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/green_card"
                            android:text="@string/green"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            tools:ignore="RelativeOverlap" />
                        <RadioButton
                            android:id="@+id/green_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/green"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/blue_card"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/blue"
                            android:backgroundTint="@color/blue"
                            app:cardCornerRadius="10dp" />

                        <TextView
                            android:id="@+id/blue_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/blue_card"
                            android:text="@string/blue"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            tools:ignore="RelativeOverlap" />
                        <RadioButton
                            android:id="@+id/blue_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/pink_card"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/pink"
                            android:backgroundTint="@color/pink"
                            app:cardCornerRadius="10dp" />

                        <TextView
                            android:id="@+id/pink_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/pink_card"
                            android:text="@string/pink"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            tools:ignore="RelativeOverlap" />
                        <RadioButton
                            android:id="@+id/pink_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/orange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/pink"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/orange_card"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:background="@color/orange"
                            android:backgroundTint="@color/orange"
                            app:cardCornerRadius="10dp" />

                        <TextView
                            android:id="@+id/orange_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/orange_card"
                            android:text="@string/orange"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            tools:ignore="RelativeOverlap" />
                        <RadioButton
                            android:id="@+id/orange_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/other_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/orange"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/add_color_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/add"
                            android:src="@drawable/rectangle" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/other_color"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="16sp"
                            android:layout_toEndOf="@id/add_color_img"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />

                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>