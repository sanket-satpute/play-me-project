<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#d9d9d9"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/choose_one_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Choose One"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/choose_one_helper_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/choose_one_txt"
        android:text="Choose any one from the bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:alpha="0.7"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_camera_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_one_helper_txt"
        android:layout_marginHorizontal="38dp"
        android:layout_marginVertical="24dp"
        app:cornerRadius="12dp"
        android:textColor="@color/black"
        android:backgroundTint="#ECC152"
        android:paddingVertical="14dp"
        android:outlineProvider="none"
        android:text="Camera"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_gallery_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/open_camera_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="38dp"
        android:layout_marginVertical="24dp"
        app:cornerRadius="12dp"
        android:textColor="@color/black"
        android:paddingVertical="14dp"
        android:outlineProvider="none"
        android:backgroundTint="#ECC152"
        android:text="Gallery"
        />
</androidx.constraintlayout.widget.ConstraintLayout>