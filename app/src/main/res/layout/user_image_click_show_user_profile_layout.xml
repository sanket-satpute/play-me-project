<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_picture_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/orange_man_user_profile_picture"
            android:background="#d9d9d9"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_or_set_user_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="50dp"
            android:text="Change"
            app:icon="@drawable/ic_round_edit_24"
            app:iconSize="17dp"
            android:textColor="@color/white"
            app:iconTint="@color/white"
            android:textAllCaps="false"
            android:outlineProvider="none"
            app:layout_constraintStart_toStartOf="@id/remove_user_profile_picture"
            app:layout_constraintBottom_toTopOf="@id/remove_user_profile_picture"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/remove_user_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="50dp"
            android:text="Remove"
            app:icon="@drawable/trash_24"
            app:iconSize="17dp"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:backgroundTint="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            android:outlineProvider="none"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/set_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="50dp"
            android:text="Set"
            app:icon="@drawable/ic_round_edit_24"
            app:iconSize="17dp"
            android:visibility="gone"
            app:iconTint="@color/black"
            android:textColor="@color/black"
            android:outlineProvider="none"
            android:textAllCaps="false"
            app:backgroundTint="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/active_status_symbol"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintEnd_toStartOf="@id/active_status_txt"
            app:layout_constraintBottom_toBottomOf="@id/active_status_txt"
            app:layout_constraintTop_toTopOf="@id/active_status_txt"
            app:cardBackgroundColor="@color/green"
            android:layout_marginEnd="9dp"
            app:cardElevation="0dp"
            android:elevation="0dp"
            app:cardCornerRadius="50dp"
            />

        <TextView
            android:id="@+id/active_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="24dp"
            android:textColor="@color/white"
            />

        <ProgressBar
            android:id="@+id/image_uploading_and_downloading_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:outlineProvider="none"
            android:padding="0dp"
            android:visibility="gone"
            android:layout_marginBottom="-5dp"
            android:scaleY="1.8"
            />

        <TextView
            android:id="@+id/image_uploading_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="0%"
            android:textColor="@color/white"
            android:textSize="44sp"
            android:textStyle="bold"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_picture_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        >
        <TextView
            android:id="@+id/user_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer_name"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
            
        <ImageView
            android:id="@+id/coin_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rupee"
            app:layout_constraintStart_toStartOf="@id/user_full_name"
            app:layout_constraintTop_toBottomOf="@id/user_full_name"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/coin_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,013"
            app:layout_constraintStart_toEndOf="@id/coin_image"
            app:layout_constraintTop_toTopOf="@id/coin_image"
            app:layout_constraintBottom_toBottomOf="@id/coin_image"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/money_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/dollars"
            app:layout_constraintStart_toEndOf="@id/coin_txt"
            app:layout_constraintTop_toTopOf="@id/coin_txt"
            app:layout_constraintBottom_toBottomOf="@id/coin_txt"
            android:layout_marginStart="74dp"
            />

        <TextView
            android:id="@+id/money_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            app:layout_constraintStart_toEndOf="@id/money_image"
            app:layout_constraintTop_toTopOf="@id/money_image"
            app:layout_constraintBottom_toBottomOf="@id/money_image"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/mob_no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mob No : "
            app:layout_constraintStart_toStartOf="@id/coin_image"
            app:layout_constraintTop_toBottomOf="@id/coin_image"
            android:layout_marginTop="32dp"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : "
            app:layout_constraintStart_toStartOf="@id/mob_no_txt"
            app:layout_constraintTop_toBottomOf="@id/mob_no_txt"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username : "
            app:layout_constraintStart_toStartOf="@id/email_txt"
            app:layout_constraintTop_toBottomOf="@id/email_txt"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/upi_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI ID : "
            app:layout_constraintStart_toStartOf="@id/username_txt"
            app:layout_constraintTop_toBottomOf="@id/username_txt"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/dob_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB : "
            app:layout_constraintStart_toStartOf="@id/upi_id_txt"
            app:layout_constraintTop_toBottomOf="@id/upi_id_txt"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/age_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age : "
            app:layout_constraintStart_toStartOf="@id/dob_txt"
            app:layout_constraintTop_toBottomOf="@id/dob_txt"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/mob_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9325571685"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintTop_toTopOf="@id/mob_no_txt"
            app:layout_constraintBottom_toBottomOf="@id/mob_no_txt"
            android:textSize="17sp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssanket223@gmail.com"
            app:layout_constraintStart_toEndOf="@id/username_txt"
            app:layout_constraintTop_toTopOf="@id/email_txt"
            app:layout_constraintBottom_toBottomOf="@id/email_txt"
            android:layout_marginStart="16dp"
            android:textSize="17sp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssanket223@user"
            app:layout_constraintStart_toEndOf="@id/username_txt"
            app:layout_constraintTop_toTopOf="@id/username_txt"
            app:layout_constraintBottom_toBottomOf="@id/username_txt"
            android:layout_marginStart="16dp"
            android:textSize="17sp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/upi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssanket223@okaxis"
            app:layout_constraintStart_toEndOf="@id/username_txt"
            app:layout_constraintTop_toTopOf="@id/upi_id_txt"
            app:layout_constraintBottom_toBottomOf="@id/upi_id_txt"
            android:layout_marginStart="16dp"
            android:textSize="17sp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 MAY 2001"
            app:layout_constraintStart_toEndOf="@id/username_txt"
            app:layout_constraintTop_toTopOf="@id/dob_txt"
            app:layout_constraintBottom_toBottomOf="@id/dob_txt"
            android:layout_marginStart="16dp"
            android:textSize="17sp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 Year's old"
            app:layout_constraintStart_toEndOf="@id/username_txt"
            app:layout_constraintTop_toTopOf="@id/age_txt"
            app:layout_constraintBottom_toBottomOf="@id/age_txt"
            android:layout_marginStart="16dp"
            android:textSize="17sp"
            android:alpha="0.7"
            />
        <LinearLayout
            android:id="@+id/operation_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/age_txt"
            android:weightSum="2">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                app:cornerRadius="30dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:backgroundTint="#d9d9d9"
                android:outlineProvider="none"
                android:textColor="@color/white"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/hide_profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide"
                app:cornerRadius="30dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:backgroundTint="#ffa500"
                android:outlineProvider="none"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/joined_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/operation_btn_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:alpha="0.4"
            />

        <TextView
            android:id="@+id/joined_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 Jan 2003"
            app:layout_constraintStart_toEndOf="@id/joined_txt"
            app:layout_constraintTop_toTopOf="@id/joined_txt"
            app:layout_constraintBottom_toBottomOf="@id/joined_txt"
            android:layout_marginStart="16dp"
            android:alpha="0.7"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>