<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="#d9d9d9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sign_out_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out ?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/sign_out_helper_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to sign out ?"
        app:layout_constraintTop_toBottomOf="@id/sign_out_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_sign_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sign_out_helper_txt"
        app:layout_constraintEnd_toStartOf="@id/yes_sign_out_btn"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="Cancel"
        android:textAllCaps="false"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        app:cornerRadius="20dp"
        android:outlineProvider="none"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yes_sign_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes, Sign Out"
        app:layout_constraintTop_toBottomOf="@+id/sign_out_helper_txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/red"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>