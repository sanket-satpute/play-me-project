<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.activity.LockScreenActivity"
    android:id="@+id/parent_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/time_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        >
        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:38"
            android:textSize="54sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/time_am_pm_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_am_pm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:textStyle="bold"
            android:alpha="0.5"
            android:textSize="18sp"
            android:layout_marginStart="7dp"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintBottom_toBottomOf="@id/time_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/time_txt"
            app:layout_constraintTop_toTopOf="@id/time_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tue Jul 25"
        android:textStyle="bold"
        android:alpha="0.5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_relative" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_card_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/date_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="46dp"
        app:cardCornerRadius="4dp"
        android:layout_marginHorizontal="44dp"
        >
        <ImageView
            android:id="@+id/song_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_music"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </com.google.android.material.card.MaterialCardView>
    
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/image_card_layout"
        app:layout_constraintEnd_toEndOf="@id/image_card_layout"
        app:layout_constraintTop_toBottomOf="@id/image_card_layout"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/song_name"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="DJ_Snake_-_Magenta_Riddim_(Official_..."
            />

        <ImageView
            android:id="@+id/favorite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/heart_filled_icon_24"
            app:tint="@color/light_orangiesh"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/image_card_layout"
        app:layout_constraintEnd_toEndOf="@id/image_card_layout"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:text="Arjit Singh, Shreya Ghoshal"
        android:alpha="0.7"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:id="@+id/action_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/image_card_layout"
        app:layout_constraintEnd_toEndOf="@id/image_card_layout"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        android:layout_marginTop="36dp"
        >
        <ImageView
            android:id="@+id/shuffle_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nfill_shuffle_second_24"
            />
        <ImageView
            android:id="@+id/previous_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_round_fast_rewind_24"
            android:layout_toStartOf="@id/play_pause_btn"
            android:layout_marginEnd="25dp"
            />
        <ImageView
            android:id="@+id/play_pause_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_round_pause_24"
            />
        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_round_fast_forward_24"
            android:layout_toEndOf="@id/play_pause_btn"
            android:layout_marginStart="25dp"
            />
        <ImageView
            android:id="@+id/replay_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/undo_and_repeat_alt_24"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_constraint_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slide to unlock"
            android:textSize="16sp"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>