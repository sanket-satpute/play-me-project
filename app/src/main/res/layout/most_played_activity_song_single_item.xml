<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/parent_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/day_dark"
        android:layout_margin="5dp"
        app:cardCornerRadius="16dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/song_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_music"
                android:scaleType="centerCrop"
                android:contentDescription="@string/song"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/option_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_more_option_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                app:tint="@color/white"
                android:contentDescription="@string/more"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/play_song_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="12dp"
                android:src="@drawable/ic_baseline_music_note_24"
                app:fabSize="mini"
                app:maxImageSize="50dp"
                app:backgroundTint="#99FFFFFF"
                android:contentDescription="@string/song"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxWidth="120dp"
                app:layout_constraintStart_toEndOf="@id/play_song_fab"
                android:text="@string/it_s_realme"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/play_song_fab"
                app:layout_constraintTop_toTopOf="@id/play_song_fab"
                android:layout_marginStart="5dp"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:fontFamily="@font/baloo_bhai"
                android:textSize="22sp"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/visulizer_card"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="100dp"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="16dp"
                android:visibility="invisible"
                app:cardElevation="0dp"
                android:padding="5dp"
                >
                <com.chibde.visualizer.LineBarVisualizer
                    android:id="@+id/bar_visulizer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    />
            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>